{% extends "SonataUserBundle:Profile:action.html.twig" %}
{% form_theme form ':Form:fields.html.twig' %}
{% block title %}{{ 'title_user_account'|trans({}, 'SonataUserBundle') }}{% endblock %}

{% block sonata_profile_content %}
    <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form-horizontal" role="form">
        {{ form_rest(form) }}
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </div>
    </form>
{% endblock %}

